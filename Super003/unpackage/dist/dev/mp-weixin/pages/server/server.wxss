.content {
  text-align: center;
  padding: 4%;
}
.btn {
  width: 580rpx;
  height: 80rpx;
  background-color: #735bcf;
  color: white;
  font-size: 28rpx;
  margin-top: 70rpx;
}
.title {
  color: #b2b2b2;
  font-size: 28rpx;
  font-weight: 500;
}
page {
  background-color: #2B2D30;
  --grid-item-content-background-color: #2B2D30;
  --grid-item-content-active-color: rgb(123, 97, 220);
}
@-webkit-keyframes jump {
0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    -webkit-transform: translateY(-10px);
            transform: translateY(-10px);
}
}
@keyframes jump {
0% {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    -webkit-transform: translateY(-10px);
            transform: translateY(-10px);
}
}
.logo {
  -webkit-animation: jump 0.7s infinite alternate;
